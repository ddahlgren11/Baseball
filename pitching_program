    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const allTextAreas = document.querySelectorAll('textarea');
            const textAreaIds = Array.from(allTextAreas).map(t => t.id);

            allTextAreas.forEach(textarea => {
                const savedValue = localStorage.getItem(textarea.id);
                if (savedValue) {
                    textarea.value = savedValue;
                }

                textarea.addEventListener('input', (e) => {
                    localStorage.setItem(e.target.id, e.target.value);
                });
            });

            const clearButton = document.getElementById('clear-edits-btn');
            clearButton.addEventListener('click', () => {
                textAreaIds.forEach(id => {
                    localStorage.removeItem(id);
                });
                location.reload();
            });

            const saveButton = document.getElementById('save-btn');
            saveButton.addEventListener('click', () => {
                const clone = document.documentElement.cloneNode(true);

                clone.querySelectorAll('textarea').forEach(clonedTextarea => {
                    const id = clonedTextarea.id;
                    const currentValue = document.getElementById(id).value;
                    clonedTextarea.innerHTML = currentValue;
                });

                const newHtml = clone.outerHTML;
                const blob = new Blob([newHtml], { type: 'text/html' });
                const a = document.createElement('a');
                a.href = URL.createObjectURL(blob);
                a.download = 'my_pitching_program.html';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(a.href);
            });
        });
    </script>
</body>
